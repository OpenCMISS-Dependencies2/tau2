
<project name="PerfAnalysis" default="deploy" basedir=".">
   <target name="init">
      <property name="sourceDir" value="src"/>
      <property name="classesDir" value="classes" />
      <property name="jarDir" value="bin"/>
      <property name="classpath" value="./classes:../../dms/dms.jar:../xerces.jar:../postgresql.jar:../jargs.jar" />
   </target>

   <target name="clean" depends="init">
      <delete dir="${classesDir}" />
      <delete file="${jarDir}/viewer.jar" />
   </target>

   <target name="prepare" depends="clean">
      <mkdir dir="${classesDir}" />
   </target>

   <target name="compile" depends="prepare">
      <javac srcdir="${sourceDir}" 
             destdir="${classesDir}" 
             classpath="${classpath}"/>
   </target>

   <target name="deploy" depends="init, compile">
      <jar jarfile="${jarDir}/viewer.jar" basedir="${classesDir}" />
   </target>   
</project>
